{j[topology, (n1_)?Positive, (n2_)?NonPositive, (n3_)?NonPositive, 
    (n4_)?Positive, (n5_)?Positive] /; True :> 
  Expand[j[topology, n2, n1, 0, n4, n5]/
    (3*j[topology, -1, 0, 0, 0, 0] + 3*j[topology, 0, -1, 0, 0, 0] - 
      j[topology, 0, 0, -1, 0, 0] - j[topology, 0, 0, 0, -1, 0] - 
      j[topology, 0, 0, 0, 0, -1] + 3*pp*j[topology, 0, 0, 0, 0, 0])^n3]}
